<Window x:Class="MoneyManagerApp.Presentation.Bar_Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManagerApp.Presentation"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Line graph" Height="550" Width="800" ResizeMode="NoResize" SizeToContent="Manual">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <!-- Your button content here -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="129" ></ColumnDefinition>
            <ColumnDefinition Width="671"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.RowSpan="5" Background="LightBlue"></Grid>
        <Label Content="Home" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="23" MouseDown="HomeLabel_MouseDown"/>
        <Label Content="Accounts" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="23" MouseDown="AccountsLabel_MouseDown"/>
        <Label Content="My goals" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" FontSize="23" MouseDown="MyGoalsLabel_MouseDown"/>
        <Label Content="Statistic" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" FontSize="23" MouseDown="StatisticLabel_MouseDown"/>
        <Label Content="My profile" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="23" MouseDown="MyProfileLabel_MouseDown"/>
        <Grid Grid.Column="1" Grid.RowSpan="5">
            <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="Statistic" VerticalAlignment="Top" FontSize="35" Height="50" Width="150"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,95,0,0" TextWrapping="Wrap" Text="Income vs expences" VerticalAlignment="Top" FontSize="25" Height="35" Width="250"/>
            <Button FontSize="23" Content="Apply" HorizontalAlignment="Left" Margin="445,456,0,0" VerticalAlignment="Top" Height="35" Width="120" Background="#0092FF"/>
            <TextBox HorizontalAlignment="Left" Margin="258,470,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100" Height="27"/>
            <TextBox HorizontalAlignment="Left" Margin="106,470,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100" Height="27"/>
            <TextBlock FontSize="18" HorizontalAlignment="Left" Margin="51,435,0,0" TextWrapping="Wrap" Text="Select a date range" VerticalAlignment="Top" Height="25" Width="155"/>
            <TextBlock FontSize="20" HorizontalAlignment="Left" Margin="51,470,0,0" TextWrapping="Wrap" Text="From:" VerticalAlignment="Top"/>
            <TextBlock FontSize="20" HorizontalAlignment="Left" Margin="226,470,0,0" TextWrapping="Wrap" Text="To:" VerticalAlignment="Top" RenderTransformOrigin="0.425,-1.012"/>
            <ComboBox FontSize="18" HorizontalAlignment="Left" Margin="449,50,0,0" VerticalAlignment="Top" Width="116">
                <ComboBoxItem Content="Bar graph" IsEnabled="False" IsSelected="True"/>
            </ComboBox>
            <Image Source= "images/Line_Graph.png" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,169,0,0">

            </Image>
            <TextBlock HorizontalAlignment="Left" Margin="70,144,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="14">
                <Run>Income vs</Run>
                <LineBreak />
                <Run>Expences</Run>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="124,391,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left" Margin="535,382,0,0" TextWrapping="Wrap" Text="Days" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="0.641,-0.535"/>
        </Grid>
    </Grid>
</Window>
