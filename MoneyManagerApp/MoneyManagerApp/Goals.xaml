<Window x:Class="MoneyManagerApp.Presentation.Goals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManagerApp.Presentation"
        mc:Ignorable="d"
        Title="Goals" Height="550" Width="800" ResizeMode="NoResize" SizeToContent="Manual">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="129" ></ColumnDefinition>
            <ColumnDefinition Width="671"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.RowSpan="5" Background="LightBlue"></Grid>
        <Label Content="Home" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
        <Label Content="Accounts" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="15"/>
        <Label Content="My goals" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" FontSize="15"/>
        <Label Content="Statistic" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" FontSize="15"/>
        <Label Content="My profile" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="15"/>

        <Grid Grid.Column="1" Grid.RowSpan="5">
            <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="Goals" VerticalAlignment="Top" FontSize="35" Height="50" Width="100"/>
            <Button Content="Add new goal" HorizontalAlignment="Center" Margin="0,430,0,0" VerticalAlignment="Top" Width="200" Height="30" FontSize="20" Background="#0092FF"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,160,410,0" TextWrapping="Wrap" Text="Goal 1" VerticalAlignment="Top" FontSize="20" Height="22" Width="100"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,240,410,0" TextWrapping="Wrap" Text="Goal 2" VerticalAlignment="Top" FontSize="20" Height="22" Width="100"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,320,410,0" TextWrapping="Wrap" Text="Goal 3" VerticalAlignment="Top" FontSize="20" Height="22" Width="100"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,160,60,0" TextWrapping="Wrap" Text="54%" VerticalAlignment="Top" Width="100" FontSize="20"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,240,60,0" TextWrapping="Wrap" Text="54%" VerticalAlignment="Top" Width="100"  FontSize="20"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,320,60,0" TextWrapping="Wrap" Text="54%" VerticalAlignment="Top" Width="100"  FontSize="20"/>
            <Button Content="See more" HorizontalAlignment="Center" Margin="200,160,0,0" VerticalAlignment="Top" Width="80" Height="24" FontSize="16" Background="#AA00D7"/>
            <Button Content="See more" HorizontalAlignment="Center" Margin="200,240,0,0" VerticalAlignment="Top" Width="80" Height="24" FontSize="16" Background="#AA00D7"/>
            <Button Content="See more" HorizontalAlignment="Center" Margin="200,320,0,0" VerticalAlignment="Top" Width="80" Height="24" FontSize="16" Background="#AA00D7"/>
            <Button Content="Delete" HorizontalAlignment="Center" Margin="450,160,0,0" VerticalAlignment="Top" Width="80" Height="24" FontSize="16" Background="#0092FF"/>
            <Button Content="Delete" HorizontalAlignment="Center" Margin="450,240,0,0" VerticalAlignment="Top" Width="80" Height="24" FontSize="16" Background="#0092FF"/>
            <Button Content="Delete" HorizontalAlignment="Center" Margin="450,320,0,0" VerticalAlignment="Top" Width="80" Height="24" FontSize="16" Background="#0092FF"/>

        </Grid>
    </Grid>
</Window>
